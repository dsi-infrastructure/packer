{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'changeit'|sudo -S sh '{{.Path}}'",
      "override": {
        "vmware-iso": {
          "scripts": [
            "scripts/centos/base.sh",
            "scripts/centos/vmware-tools2.sh",
            "scripts/centos/cleanup.sh",
            "scripts/centos/zerodisk.sh"
          ]
        }
      }
    }
  ],
  "builders": [
    {
      "type": "vmware-iso",
      "boot_command": [
      	"<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-prod.kickstart<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 10240,
      "guest_os_type": "centos-64",
      "http_directory": "http",
      "iso_url": "http://iso.repository.gov.pf/centos-6.4-dvd1.iso",
      "iso_checksum": "83221db52687c7b857e65bfe60787838",
      "iso_checksum_type": "md5",
      "ssh_username": "sysadmin",
      "ssh_password": "changeit",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'changeit'|sudo -S /sbin/shutdown -hP now",
      "tools_upload_flavor": "linux",
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    }
  ]
}
